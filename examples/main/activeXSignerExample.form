  <DataContext>
    <DataContext>
      <Children>
        <Complex>
          <Name value="result" />
          <Caption value="Result" />
          <Children>
            <Attribute>
              <Name value="signedXml" />
              <Caption value="Signed xml" />
              <DeclaredType>
                <AttributeType />
              </DeclaredType>
            </Attribute>
            <Attribute>
              <Name value="signingSuccessful" />
              <Caption value="Signing successful" />
              <DeclaredType>
                <AttributeType>
                  <BaseType value="Bool" />
                </AttributeType>
              </DeclaredType>
            </Attribute>
            <Attribute>
              <Name value="activeXFound" />
              <Caption value="Active X found" />
              <DeclaredType>
